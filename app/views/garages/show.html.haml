%h1= @garage.title
%p= image_tag @garage.image.url(:medium)
%p= @garage.description
%p= @garage.address
%p= @garage.date
%p= @garage.time

-if @garage.user == current_user
	= link_to "Edit", edit_garage_path(@garage)
	= link_to "Delete", garage_path(@garage), method: :delete, data: {confirm: "Do you really want to do this?"}
	= link_to "Home", root_path
-else
	= link_to "Back", root_path
